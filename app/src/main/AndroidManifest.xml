<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.unab.mercapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MercApp">
        <activity
            android:name=".view.firebase.EditarProductoActvity"
            android:exported="false" />
        <activity
            android:name=".view.firebase.GestionFirebaseActivity"
            android:exported="false" />
        <activity
            android:name=".view.firebase.FireBaseActivity"
            android:exported="false" />
        <activity
            android:name=".view.categoria.AgregarCategoriaActivity"
            android:exported="false" />
        <activity
            android:name=".view.categoria.RecyclerActivity"
            android:exported="false" />
        <activity
            android:name=".view.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>